        <!-- Carousel Added -->
        <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="/homeimgs/gamebanner1.jpg" class="d-block w-100" alt="...">
              </div>
