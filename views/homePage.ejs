              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
    </header>
    <!-- End Header -->

    <!-- Start Main -->
    <main>
        <!-- Categories -->
       
<div class="container my-5 ">
    <div class="d-flex justify-content-center align-items-center">
        <h2 class="fw-semibold mb-5">Categories</h2>
    </div>
    <div class="row g-7 justify-content-between">
        <div class="col-sm-12 col-md-6 col-lg-4 order-lg-1">
            <a href="/products/Console">
                <div class="border bg-primary text-light d-flex align-items-center justify-content-around rounded-3 watch">
                    <img style="width: 100%; height: 100%;" src="/homeimgs/banner6.png" alt="">
                </div>
            </a>
        </div>

        <div class="col-sm-12 col-md-6 col-lg-4 order-lg-2">
            <a href="/products/Games">
                <div class="border bg-primary text-light d-flex align-items-center justify-content-around rounded-3 watch">
                    <img style="width: 100%; height: 100%;" src="/homeimgs/games.png" alt="">
                </div>
            </a>
        </div>
    </div>
</div>
        <!-- Category Shoes -->
        <section class="all-categories">
            <section id="shoes" class="container">
                <div class="d-flex justify-content-center align-items-center">
                    <h2 class="fw-semibold mb-3">Products</h2>
                    
                </div>
                
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-5 justify-content-center">
                    <% product.forEach((item) => { %>
                      <div class="col justify-content-center" style="width: 250px;">
                        <a href="/product-page/<%= item._id %>">
                          <div class="card position-relative border-0 rounded-3 h-100">
                            <img src="/homeimgs/<%= item.image[0] %>" class="card-img" alt="...">
                            <div class="overlay position-absolute top-0 start-0 w-100 h-100 d-flex justify-content-center align-items-center">
                              <a href="/product-page/<%= item._id %>" class="btn btn-primary">View</a>
                            </div>
                            <div class="card-body">
                              <div><%= item.productName %></div>
                            </div>
                          </div>
                        </a>
                      </div>
                    <% }); %>
                  </div>
                  
                
            </section>

           
        <!-- Subscribe Section -->
        
    </main>
    
    
    <!-- End Main -->

    <!-- Start Footer -->
    <footer class="bg-body-tertiary text-center">
        <!-- Grid container -->
        <div class="container p-4 pb-0">
          <!-- Section: Social media -->
