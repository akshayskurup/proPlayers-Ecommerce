<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/css/login.css">
    <script>
      


      function validate() {
    let username = document.getElementById("name");
    let useremail = document.getElementById("email");
    let userpassword = document.getElementById("password");

    let trimmedUsername = username.value.trim();
    let trimmedUseremail = useremail.value.trim(); // Fixed variable name
    let trimmedUserpassword = userpassword.value.trim();

    if (trimmedUsername === "") {
        alert("Please fill username input");
        return false;
    } else if (trimmedUsername === "" && trimmedUseremail === "" && trimmedUserpassword === "") {
        alert("Please fill all the fields");
        return false;
    } else if (trimmedUseremail === "") { // Fixed condition here
        alert("Please fill email input");
        return false;
    } else if (trimmedUserpassword === "") {
        alert("Please fill password input");
        return false;
    } else if (trimmedUsername.length <= 3 || trimmedUserpassword.length <= 4 || trimmedUserpassword.length >= 15) {
        alert("Please add more length to your name and password");
        return false;
    } else if (trimmedUsername.length >= 20) {
        alert("Name is too lengthy");
        return false;
    } else {
        return true;
    }
}

  </script>
</head>
<body>
    <section class="vh-100">
        <div class="container-fluid">
          <div class="row">
            <div class="col-sm-6 text-black">
      
              <div class="px-5 ms-xl-4 mb-5">
                <i class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
                <span class="h1 fw-bold mb-0">Logo</span>
              </div>
              <%=message%>
              <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
      
                <form style="width: 23rem;" method="post" action="/signup" onsubmit="return validate()">
      
                  <h3 class="fw-normal mb-2 pb-1" style="letter-spacing: 1px;">Sign Up</h3>
      
                  <div class="form-outline mb-3">
                    <label class="form-label" for="form2Example18">Full Name</label>
                    <input type="text" id="name" name="name" class="form-control form-control-lg" />
                    
                  </div>
      
                  <div class="form-outline mb-3">
                    <label class="form-label" for="form2Example28">Email</label>
                    <input type="email" id="email" name="email" class="form-control form-control-lg" />
                    
                  </div>

                  <div class="form-outline mb-3">
                    <label class="form-label" for="form2Example28">Password</label>
                    <input type="password" name="password" id="password" class="form-control form-control-lg" />
                    
                  </div>
                  
          
                  <div class="pt-1 mb-3">
                    <button class="btn btn-info btn-lg btn-block" type="submit">Login</button>
                  </div>
      
                  <p class="small mb-4 pb-lg-2"><a class="text-muted" href="#!">Forgot password?</a></p>
                  <p class="small mb-4 pb-lg-2">Already have an account? <a href="/" class="link-info">Login here</a></p>
      
                </form>
      
              </div>
      
            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img3.webp"
                alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
          </div>
        </div>
      </section>
</body>
</html>