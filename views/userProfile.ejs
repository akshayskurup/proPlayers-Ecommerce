<%-include('header.ejs')%>

        <div class="container" id="user-profile">
            <div class="main-body">
            
                <!-- /Breadcrumb -->

                <div class="row gutters-sm d-flex">

                    <div class="col-md-4 col-md-3 col-lg-4 ">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex flex-column align-items-center text-center">
                                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin"
                                        class="rounded-circle" width="150" />
                                    <div class="mt-3">
                                        <h4><%=user.name%></h4>
                                        
                                    </div>
                                    
                                </div>
                                
                            </div>
                            
                        </div>
                        <a class="btn btn-primary" href="/add-address">Add Address</a>
                        <% user.address.forEach((User,index)=>{%>

                        
                        <div class="card mt-3">
                            <p class="text-center bg-secondary text-light">Address <%=index+1%></p>
                            <div class="card-body ">
                                <p><%=User.houseName%>,<%=User.street%>, <%=User.city%>, <%=User.pincode%>,<%=User.state%>, <%=User.mobile%></p>
                                <div class="d-flex justify-content-between">
                                <form action="/edit-address" method="post">
                                    <input type="hidden" name="addressIndex" value="<%= index %>">
                                    <button type="submit">Edit</button>
                                </form>
                                <form action="/delete-address" method="post">
                                    <input type="hidden" name="addressIndex" value="<%= User._id %>">
                                    <button type="submit">Delete</button>
                                </form>
                            </div>
                            </div>
                        </div>
                        <%})%>
                    </div>
                    <div class="col-md-8 ">
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Name</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary"><%=user.name%></div>
                                </div>
                                <hr />
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Email</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary"><%=user.email%></div>
                                </div>
                                <hr />
                                
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Mobile</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary"><%=user.phone%></div>
                                </div>
                                <hr />
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h4 class="mb-0">Address</h4>
                                    </div>
                                    
                                </div>
                                <hr />
                                <div class="row">
                                    <% if (user.address && user.address.length > 0) { %>
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">House Name</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <%=user.address[0].houseName%>
                                    </div>
                                </div>
                                <hr />
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Street</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <%=user.address[0].street%>
                                    </div>
                                </div>
                                <hr />
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">City</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <%=user.address[0].city%>
                                    </div>
                                </div>
                                <hr />
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Pincode</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <%=user.address[0].pincode%>
                                    </div>
                                </div>
                                <hr />
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">State</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <%=user.address[0].state%>
                                    </div>
                                </div>
                                <hr />
                                <% } else { %>
                                    <div class="col-12 text-secondary">
                                        No address available.
                                    </div>
                                <% } %>
                                
                                <div class="row">
                                    <div class="col-sm-12 d-flex justify-content-between">
                                        <a class="btn btn-info" href="/user-edit-profile">Edit</a>
                                        <a class="btn btn-info" href="/change-password">Change Password</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
<%-include("footer.ejs")%>