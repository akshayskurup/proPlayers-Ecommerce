<script>
    function validate(){
            let username = document.getElementById("name");
            let usernumber = document.getElementById("phone");
            let userhousename = document.getElementById("houseName");
            let userstreet = document.getElementById("street");
            let usercity = document.getElementById("city");
            let userpincode = document.getElementById("pincode");
            let userstate = document.getElementById("state");
            
            
            const pattern = /^[a-zA-Z0-9\s\-_]+$/;
            const statePattern = /^[a-zA-Z\s]+$/;
            const errorMessageContainer = document.getElementById("error-message-container");

            // Get the entered value
            let trimmedUsernumber = usernumber.value.trim();
            let trimmedUsername = username.value.trim();
            let trimmedUserhousename= userhousename.value.trim();
            let trimmedUserstreet = userstreet.value.trim();
            let trimmedUsercity = usercity.value.trim();
            let trimmedUserpincode = userpincode.value.trim();
            let trimmedUserstate = userstate.value.trim();
            

            if (trimmedUsername === "") {
                errorMessageContainer.innerText = "Please fill username input";
                return false;
            }  if (trimmedUsernumber === "" && trimmedUsername=== "" && trimmedUserhousename === "" && trimmedUserstreet === ""
            && trimmedUsercity === "" && trimmedUserpincode === "" && trimmedUserstate === "") {
                errorMessageContainer.innerText = "Please fill all the fields";
                return false;
            } if (isNaN(trimmedUsernumber) || trimmedUsernumber === "") {
                errorMessageContainer.innerText = "Please enter a valid number";
                return false;
            } if (trimmedUserhousename === "") {
                errorMessageContainer.innerText = "Please fill housename input";
                return false;
            } if (!pattern.test(trimmedUserhousename)) {
                errorMessageContainer.innerText = "Please fill housename correctly";
                return false;
            } if(trimmedUserhousename.length<=7){
                errorMessageContainer.innerText = "Housename should have more than 7 letters";
                return false;
            } if(trimmedUserhousename.length>=30){
                errorMessageContainer.innerText = "Housename should be less than 30 letters";
                return false;//
            }if (!pattern.test(trimmedUserstreet)) {
                errorMessageContainer.innerText = "Please fill Street correctly";
                return false;
            } if(trimmedUserstreet.length<=3){
                errorMessageContainer.innerText = "Street should have more than 3 letters";
                return false;
            } if(trimmedUserstreet.length>=15){
                errorMessageContainer.innerText = "Street should be less than 30 letters";
                return false;//
            } if (!pattern.test(trimmedUsercity)) {
                errorMessageContainer.innerText = "Please fill City correctly";
                return false;
            } if(trimmedUsercity.length<=3){
                errorMessageContainer.innerText = "City should have more than 3 letters";
                return false;
            } if(trimmedUsercity.length>=15){
                errorMessageContainer.innerText = "City should be less than 30 letters";
                return false;
            } if (trimmedUsercity === "") {
                errorMessageContainer.innerText = "Please fill city input";
                return false;
            }  if (trimmedUserstreet === "") {
                errorMessageContainer.innerText = "Please fill street input";
                return false;
            }  if (trimmedUserpincode === "") {
                errorMessageContainer.innerText = "Please fill pincode input";
                return false;
            }  if(isNaN(trimmedUserpincode)){
                errorMessageContainer.innerText = "Please fill pincode correctly!";
                return false;
            }  if (trimmedUserstate === "") {
                errorMessageContainer.innerText = "Please fill state input";
                return false;//
            }   if (!statePattern.test(trimmedUserstate)) {
                errorMessageContainer.innerText = "Please fill State correctly";
                return false;
            } if(trimmedUserstate.length<=3){
                errorMessageContainer.innerText = "State should have more than 3 letters";
                return false;
            } if(trimmedUserstate.length>=15){
                errorMessageContainer.innerText = "State should be less than 30 letters";
                return false;
            }if (trimmedUsernumber.length >= 11) {
                errorMessageContainer.innerText = "Phone number should be 10 digits";
                return false;
            }  if (trimmedUsernumber.length < 10) {
                errorMessageContainer.innerText = "Phone number should be 10 digits";
                return false;
            }if (!/^\d{10}$/.test(trimmedUsernumber)) {
                errorMessageContainer.innerText = "Please enter a valid 10-digit phone number without symbols";
                return false;
            }
                errorMessageContainer.innerText = ""; // Clear previous error messages
                return true;
                        
        }

    
</script>



<script>
    $(document).ready(function () {
        const image = document.getElementById('profilePicturePreview');
        const input = document.getElementById('profilePictureInput');
        const cropper = new Cropper(image, {
            aspectRatio: 1,
            viewMode: 2,
        });

        input.addEventListener('change', function (e) {
            const files = e.target.files;
            const reader = new FileReader();

            reader.onload = function () {
                cropper.replace(reader.result);
            };

            reader.readAsDataURL(files[0]);
        });

        document.getElementById('saveCroppedImage').addEventListener('click', function () {
            // Get the cropped canvas and convert it to a Blob
            const croppedCanvas = cropper.getCroppedCanvas();
            console.log(croppedCanvas);
            croppedCanvas.toBlob(function (croppedBlob) {
                // Create a FormData object and append the croppedBlob
                const formData = new FormData();
                formData.append('profilePicture', croppedBlob, 'cropped_image.jpg');

                // Send the cropped image data to the server using Fetch API or Ajax
                fetch('/user-edit-profile', {
                    method: 'POST',
                    body: formData,
                }).then(response => {
                    // Handle the response as needed
                    console.log(response);
                }).catch(error => {
                    console.error(error);
                });
            }, 'image/jpeg');
        });
    });
</script>

